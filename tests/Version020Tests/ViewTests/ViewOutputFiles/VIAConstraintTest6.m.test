#import "VIAConstraintTest6.h"
#import "UIColor+MSAColors.h"
#import "UIFont+MSAFonts.h"

@interface VIAConstraintTest6 ()

@property (nonatomic, strong) UILabel* l1;
@property (nonatomic, strong) UIButton* b1;
@property (nonatomic, strong) UITextField* t1;
@property (nonatomic, strong) UIImageView* i1;

@end

@implementation VIAConstraintTest6

#pragma mark - Lifecycle

- (instancetype)init {
  self = [super init];
  if (self) {
    [self setupViews];
    [self setupConstraints];
  }
  return self;
}

#pragma mark - Setup

- (void)setupViews {
  NSArray* subviews = @[self.l1, self.b1, self.t1, self.i1];
  for (UIView* view in subviews) {
    view.translatesAutoresizingMaskIntoConstraints = NO;
    [self addSubview:view];
  }
}

- (void)setupConstraints {
  NSLayoutConstraint* l1CenterX = [NSLayoutConstraint constraintWithItem:self.l1 attribute:NSLayoutAttributeCenterX relatedBy:NSLayoutRelationEquality toItem:self attribute:NSLayoutAttributeCenterX multiplier:1.0 constant:0.0];
  [self addConstraint:l1CenterX];
  NSLayoutConstraint* l1CenterY = [NSLayoutConstraint constraintWithItem:self.l1 attribute:NSLayoutAttributeCenterY relatedBy:NSLayoutRelationEquality toItem:self attribute:NSLayoutAttributeCenterY multiplier:1.0 constant:0.0];
  [self addConstraint:l1CenterY];
  NSLayoutConstraint* b1CenterX = [NSLayoutConstraint constraintWithItem:self.b1 attribute:NSLayoutAttributeCenterX relatedBy:NSLayoutRelationEquality toItem:self attribute:NSLayoutAttributeCenterX multiplier:1.0 constant:10.0];
  [self addConstraint:b1CenterX];
  NSLayoutConstraint* b1CenterY = [NSLayoutConstraint constraintWithItem:self.b1 attribute:NSLayoutAttributeCenterY relatedBy:NSLayoutRelationEquality toItem:self attribute:NSLayoutAttributeCenterY multiplier:1.0 constant:-10.0];
  [self addConstraint:b1CenterY];
  NSLayoutConstraint* t1CenterX = [NSLayoutConstraint constraintWithItem:self.t1 attribute:NSLayoutAttributeCenterX relatedBy:NSLayoutRelationEquality toItem:self.l1 attribute:NSLayoutAttributeCenterX multiplier:1.0 constant:0.0];
  [self addConstraint:t1CenterX];
  NSLayoutConstraint* t1CenterY = [NSLayoutConstraint constraintWithItem:self.t1 attribute:NSLayoutAttributeCenterY relatedBy:NSLayoutRelationEquality toItem:self.b1 attribute:NSLayoutAttributeCenterY multiplier:1.0 constant:0.0];
  [self addConstraint:t1CenterY];
  NSLayoutConstraint* i1CenterX = [NSLayoutConstraint constraintWithItem:self.i1 attribute:NSLayoutAttributeCenterX relatedBy:NSLayoutRelationEquality toItem:self.b1 attribute:NSLayoutAttributeCenterX multiplier:1.0 constant:5.5];
  [self addConstraint:i1CenterX];
  NSLayoutConstraint* i1CenterY = [NSLayoutConstraint constraintWithItem:self.i1 attribute:NSLayoutAttributeCenterY relatedBy:NSLayoutRelationEquality toItem:self.l1 attribute:NSLayoutAttributeCenterY multiplier:1.0 constant:3.2];
  [self addConstraint:i1CenterY];
}

#pragma mark - Lazy Getters

- (UILabel*)l1 {
  if (_l1) {
    return _l1;
  }
  _l1 = [[UILabel alloc] init];
  _l1.text = NSLocalizedString(@"Hi", nil);
  return _l1;
}

- (UIButton*)b1 {
  if (_b1) {
    return _b1;
  }
  _b1 = [[UIButton alloc] init];
  [_b1 setTitle:NSLocalizedString(@"Hi", nil) forState:UIControlStateNormal];
  return _b1;
}

- (UITextField*)t1 {
  if (_t1) {
    return _t1;
  }
  _t1 = [[UITextField alloc] init];
  _t1.text = NSLocalizedString(@"Hi", nil);
  return _t1;
}

- (UIImageView*)i1 {
  if (_i1) {
    return _i1;
  }
  _i1 = [[UIImageView alloc] init];
  _i1.image = [UIImage imageNamed:@"file1.png"];
  return _i1;
}

@end
