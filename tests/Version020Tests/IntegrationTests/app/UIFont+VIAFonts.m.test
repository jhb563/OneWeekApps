#import "UIFont+VIAFonts.h"

@implementation UIFont (VIAFonts)

+ (UIFont*)standardFont {
  return [UIFont fontWithName:@"HelveticaNeue" size:14.0];
}

+ (UIFont*)buttonFont {
  return [UIFont fontWithName:@"Verdana" size:18.0];
}

+ (UIFont*)placeholderFont {
  return [UIFont fontWithName:@"Arial" size:14.0];
}

@end
