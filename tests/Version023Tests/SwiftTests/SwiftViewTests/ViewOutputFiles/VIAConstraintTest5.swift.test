import UIKit

class VIAConstraintTest5: UIView {
  
  // MARK: Lifecycle Methods
  
  override init(frame: CGRect) {
    super.init(frame: frame)
    initCommon()
  }
  
  required init?(coder aDecoder: NSCoder) {
    super.init(coder: aDecoder)
    initCommon()
  }
  
  func initCommon() {
    setupViews()
    setupConstraints()
  }
  
  // MARK: Setup Methods
  
  func setupViews() {
    let subviews = [l1, b1, t1, i1, l2, b2, t2, i2]
    for view in subviews {
      view.translatesAutoresizingMaskIntoConstraints = false
      addSubview(view)
    }
  }
  
  func setupConstraints() {
    NSLayoutConstraint(item: b1, attribute: .Top, relatedBy: .Equal, toItem: l1, attribute: .Bottom, multiplier: 1.0, constant: 0.0).active = true
    NSLayoutConstraint(item: t1, attribute: .Left, relatedBy: .Equal, toItem: l1, attribute: .Right, multiplier: 1.0, constant: 0.0).active = true
    NSLayoutConstraint(item: i1, attribute: .Left, relatedBy: .Equal, toItem: b1, attribute: .Right, multiplier: 1.0, constant: 10.0).active = true
    NSLayoutConstraint(item: i1, attribute: .Top, relatedBy: .Equal, toItem: t1, attribute: .Bottom, multiplier: 1.0, constant: 10.0).active = true
    NSLayoutConstraint(item: l2, attribute: .Bottom, relatedBy: .Equal, toItem: b2, attribute: .Top, multiplier: 1.0, constant: 0.0).active = true
    NSLayoutConstraint(item: l2, attribute: .Right, relatedBy: .Equal, toItem: t2, attribute: .Left, multiplier: 1.0, constant: 0.0).active = true
    NSLayoutConstraint(item: b2, attribute: .Right, relatedBy: .Equal, toItem: i2, attribute: .Left, multiplier: 1.0, constant: 5.0).active = true
    NSLayoutConstraint(item: t2, attribute: .Bottom, relatedBy: .Equal, toItem: i2, attribute: .Top, multiplier: 1.0, constant: 6.6).active = true
  }
  
  // MARK: Lazy Getters
  
  lazy var l1: UILabel! = {
    let v = UILabel()
    v.text = NSLocalizedString("Hi", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: "")
    return v
  }()
  
  lazy var b1: UIButton! = {
    let v = UIButton()
    v.setTitle(NSLocalizedString("Hi", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: ""), forState: .Normal)
    return v
  }()
  
  lazy var t1: UITextField! = {
    let v = UITextField()
    v.text = NSLocalizedString("Hi", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: "")
    return v
  }()
  
  lazy var i1: UIImageView! = {
    let v = UIImageView()
    v.image = UIImage(imageLiteral: "file1.png")
    return v
  }()
  
  lazy var l2: UILabel! = {
    let v = UILabel()
    v.text = NSLocalizedString("Bye", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: "")
    return v
  }()
  
  lazy var b2: UIButton! = {
    let v = UIButton()
    v.setTitle(NSLocalizedString("Bye", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: ""), forState: .Normal)
    return v
  }()
  
  lazy var t2: UITextField! = {
    let v = UITextField()
    v.text = NSLocalizedString("Bye", tableName: nil, bundle: NSBundle.mainBundle(), value: "", comment: "")
    return v
  }()
  
  lazy var i2: UIImageView! = {
    let v = UIImageView()
    v.image = UIImage(imageLiteral: "file2.png")
    return v
  }()
  
}
